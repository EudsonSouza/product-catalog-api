# Database Configuration
# Option 1: Use DATABASE_URL for Neon (recommended for production)
# DATABASE_URL=postgres://user:password@host/database
# Example: DATABASE_URL=postgres://neondb_owner:npg_xxx@ep-xxx-pooler.sa-east-1.aws.neon.tech/neondb

# Option 2: Use individual parameters for local PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=product_catalog
DB_USERNAME=postgres
DB_PASSWORD=your_password_here

# Application Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://localhost:7242;http://localhost:5140

# Logging Configuration  
LOG_LEVEL_DEFAULT=Information
LOG_LEVEL_ASPNETCORE=Warning

# Security Configuration
ALLOWED_HOSTS=*

# CORS Configuration (Frontend origins)
Cors:AllowedOrigins:0=http://localhost:3000
Cors:AllowedOrigins:1=http://localhost:3001

# JWT Authentication (Required)
Jwt:Secret=your_super_secret_jwt_key_minimum_32_characters_long_here
Jwt:Issuer=ProductCatalogAPI
Jwt:Audience=ProductCatalogAPI
Jwt:ExpirationHours=24

# Optional: External Services (for future integrations)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=